<div class="flex-container">
  <div class="flex-item">
    <h4><mark>Friends</mark></h4>
    <% @friendships.each do |friendship| %>
      <div class="flex-container">
        <div class="flex-item">
          <strong><%= friendship.friend.name %></strong>
        </div>
        <div class="flex-item">
          <%= link_to "Uninvite", friend_path(friendship), data: { turbo_method: :delete } %>
        </div>
      </div>
    <% end %>
    </p>
  </div>
  <div class="flex-item">
    <h4><mark>Not yet Friends</mark></h4>
    <% @users.each do |user| %>
      <div class="flex-container">
        <div class="flex-item">
          <strong><%= user.name %></strong>
        </div>
        <div class="flex-item">
          <%= link_to "Invite", friends_path(id: user.id), data: { turbo_method: :post } %>
        </div>
      </div>
    <% end %>
  </div>
</div>