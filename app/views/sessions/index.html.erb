<p style="color: green"><%= notice %></p>
<div id="sessions">
  <% @sessions.each do |session| %>
    <p>
      <strong>
        <%= link_to session.sport + " in " + session.spot.name, session %>
      </strong><br>
      Surfer: <%= session.user.name %><br>
      When: <%= time_tag session.when %>
    </p>
  <% end %>
  <%= paginate @sessions %>
</div>